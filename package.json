{
  "name": "cloudzilla-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "File transfer utility for multiple cloud storage services.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:icons": "electron-icon-builder --input=./app-icon.png --output=./build --flatten",
    "build:appx-icons": "node generate-appx-assets.js",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "clean": "rimraf packages/*/dist packages/*/build packages/*/.webpack"
  },
  "keywords": [
    "cloud",
    "transfer",
    "google-drive",
    "dropbox",
    "onedrive"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "sharp": "^0.34.5",
    "typescript": "^5.0.0"
  }
}
